{
  "manifest_version": 3,
  "name": "Highlight to Webhook",
  "version": "1.0",
  "description": "Sends highlighted text to a webhook when a button is clicked.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "chrome_extension_icon.png",
      "48": "chrome_extension_icon.png",
      "128": "chrome_extension_icon.png"
    }
  }
}
